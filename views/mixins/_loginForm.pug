mixin loginForm()

  form.form.flex(action="/login" method="post")
    .col-1-2
      h2 login
      label(for="email") Email
      input(type="text" name="email" placeholder="Enter your email")
      label(for="password") Password
      input(type="password" name="password")
      input.button(type="submit" value="Login")
    .col-1-2(style="text-align: center;margin-top: 44px;")
      p Login with:
      a(href="/auth/facebook" class="btn btn-primary" style="background: #4267b2;color:white;padding: 10px 20px;border-radius: 4px;")
        span(class="fa fa-facebook" style="margin:0px 10px;")
        span Facebook